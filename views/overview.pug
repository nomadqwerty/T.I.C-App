//- to be able to extend the data on this temlate to base.
//- use extends filename, eg below
extends base

//- now we the overview block content to override the base block content
block content
    main.main
        div.card-container
            each service in services
                div.card
                    div.card__header
                        div.card__picture
                            div.card__picture-overlay &nbsp;
                            img.card__picture-img(src="img/tour-1-cover.jpg" alt="Tour 1")
                        h3.heading-tertirary
                            span Impact sunday service
                    div.card__details
                        h4.card__sub-heading Join impact service
                        p.card__text God loves you 
                        div.card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-map-pin")
                            span PortHarcourt, Rivers State
                        div.card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-calendar")
                            span Sunday's
                        div.card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-flag")
                            span 1 location
                        div.card__data
                            svg.card__icon
                                use(xlink:href="img/icons.svg#icon-user")
                            span every body

                    div.card__footer
                        p 
                            span.card__footer-value
                            span.card__footer-text per person
                        p.card__ratings   
                            span.card__footer-value 4.9  
                            span.card__footer-text rating(21)
                        a.btn.btn--green.btn--small Details