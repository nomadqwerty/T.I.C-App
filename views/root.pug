//- to be able to extend the data on this temlate to base.
//- use extends filename, eg below
extends base

//- now we the overview block content to override the base block content
block content
    main.main
        div.card-container
            each i in resources
                div.card
                    div.card__header
                        div.card__picture
                            div.card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/tours/${i.imageCover}` alt=`${i.name}`)
                        h3.heading-tertirary
                            span= i.name
                    div.card__details
                        h4.card__sub-heading= `view ${i.name}`
                        p.card__text= i.summary 
                        div.card__data
                            svg.card__icon
                                use(xlink:href="/img/icons.svg#icon-map-pin")
                            span= i.location

                    div.card__footer
                        a.btn.btn--green.btn--small(href=`/${i.path}`) Details